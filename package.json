{
  "name": "portfoly",
  "version": "0.1.0",
  "description": "Portfolio CMS",
  "keywords": [
    "portfolio"
  ],
  "license": "MIT",
  "type": "module",
  "author": {
    "name": "portfoly.co",
    "url": "https://portfoly.co"
  },
  "scripts": {
    "build": "cross-env NODE_OPTIONS=--no-deprecation next build",
    "dev": "cross-env NODE_OPTIONS=--no-deprecation next dev",
    "devsafe": "rm -rf .next && cross-env NODE_OPTIONS=--no-deprecation next dev",
    "generate:importmap": "cross-env NODE_OPTIONS=--no-deprecation payload generate:importmap",
    "generate:types": "cross-env NODE_OPTIONS=--no-deprecation payload generate:types",
    "lint": "cross-env NODE_OPTIONS=--no-deprecation next lint",
    "payload": "cross-env NODE_OPTIONS=--no-deprecation payload",
    "start": "cross-env NODE_OPTIONS=--no-deprecation next start",
    "test": "jest",
    "seed": "node ./console/seed.js",
    "reset": "node ./console/reset.js"
  },
  "dependencies": {
    "@payloadcms/db-mongodb": "^3.35.1",
    "@payloadcms/next": "^3.35.1",
    "@payloadcms/richtext-lexical": "^3.35.1",
    "cross-env": "^7.0.3",
    "graphql": "^16.10.0",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^10.1.4",
    "mongoose": "^8.13.3",
    "next": "15.3.1",
    "payload": "^3.35.1",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "sharp": "0.34.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@tailwindcss/postcss": "^4.1.4",
    "@tailwindcss/typography": "^0.5.16",
    "@types/node": "^22.14.1",
    "@types/react": "19.1.2",
    "@types/react-dom": "19.1.2",
    "autoprefixer": "^10.4.21",
    "daisyui": "^5.0.28",
    "dotenv": "^16.5.0",
    "eslint": "^9.25.1",
    "eslint-config-next": "15.3.1",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
    "tailwindcss": "^4.1.4",
    "typescript": "5.8.3"
  },
  "engines": {
    "node": "^22.14.0 || >=22.15.0",
    "pnpm": "^10 || >= 10"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "sharp"
    ]
  }
}
